<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:background="?attr/drawerBackgroundColor">

	<!-- THIS HAS TO GO INTO ANY LAYOUT OF ANY ACTIVITY THAT HAS A TOOLBAR! -->
	<include layout="@layout/helper_toolbar"/>
	<!-- END -->

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<EditText
			android:id="@+id/phenotype_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="text|textCapSentences"
			android:hint="@string/hint_phenotype_input"
			android:layout_weight="100"
			android:layout_gravity="center_vertical"
			android:maxLines="1"/>
		<ImageButton
			android:id="@+id/phenotype_add_button"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_weight="0"
			android:layout_gravity="center_vertical"
			app:srcCompat="@drawable/action_add"/>
	</LinearLayout>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/phenotype_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="vertical"/>
</LinearLayout>