<resources>
	<!-- Application theme DARK. -->
	<style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
		<item name="colorAccent">@color/color_accent</item>
		<item name="android:textColor">@color/text_color_dark</item>
		<item name="android:textColorSecondary">@android:color/secondary_text_dark</item>
		<item name="textColor">@color/text_color_dark</item>
		<item name="listItemBackground">@drawable/card_background_selector_dark</item>
		<item name="dividerColor">@color/divider_dark</item>
		<item name="drawerBackgroundColor">@color/drawer_background_dark</item>
		<item name="inputTextColor">@color/dark_gray</item>
		<item name="drawerMenuHomepage">@drawable/drawer_menu_world_dark</item>
		<item name="drawerMenuOnlineHelp">@drawable/drawer_menu_help_dark</item>
		<item name="drawerMenuDatasets">@drawable/drawer_menu_dataset_dark</item>
		<item name="drawerMenuSettings">@drawable/drawer_menu_settings_dark</item>
		<item name="drawerMenuMap">@drawable/drawer_menu_map_dark</item>
		<item name="drawerMenuAbout">@drawable/drawer_menu_about_dark</item>
		<item name="menuIconCamera">@drawable/menu_camera</item>
		<item name="android:editTextBackground">@drawable/theme_edit_text</item>
		<item name="actionDelete">@drawable/menu_trash_dark</item>
	</style>

	<!-- Application theme LIGHT -->
	<style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
		<item name="colorAccent">@color/color_accent</item>
		<item name="android:textColor">@color/text_color_light</item>
		<item name="android:textColorSecondary">@android:color/secondary_text_light</item>
		<item name="textColor">@color/text_color_light</item>
		<item name="listItemBackground">@drawable/card_background_selector_light</item>
		<item name="dividerColor">@color/divider_light</item>
		<item name="drawerBackgroundColor">@color/drawer_background_light</item>
		<item name="inputTextColor">@color/light_gray</item>
		<item name="drawerMenuHomepage">@drawable/drawer_menu_world_light</item>
		<item name="drawerMenuOnlineHelp">@drawable/drawer_menu_help_light</item>
		<item name="drawerMenuDatasets">@drawable/drawer_menu_dataset_light</item>
		<item name="drawerMenuSettings">@drawable/drawer_menu_settings_light</item>
		<item name="drawerMenuMap">@drawable/drawer_menu_map_light</item>
		<item name="drawerMenuAbout">@drawable/drawer_menu_about_light</item>
		<item name="menuIconCamera">@drawable/menu_camera_light</item>
		<item name="android:editTextBackground">@drawable/theme_edit_text</item>
		<item name="actionDelete">@drawable/menu_trash_light</item>
		<item name="android:itemTextAppearance">@style/MenuItemStyle</item>
	</style>

	<style name="MenuItemStyle">
		<item name="android:textColor">@color/text_color_light</item>
	</style>

</resources>